<h1>Your Cart</h1>

<% if @cart.cart_items.any? %>
  <table class="table">
    <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td>
          <div class="quantity-controls">
            <%= button_to '-', cart_item_path(item, quantity: item.quantity - 1), method: :patch, class: 'btn btn-secondary btn-sm' %>
            <span class="quantity-display"><%= item.quantity %></span>
            <%= button_to '+', cart_item_path(item, quantity: item.quantity + 1), method: :patch, class: 'btn btn-secondary btn-sm' %>
          </div>
        </td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= number_to_currency(item.product.price * item.quantity) %></td>
        <td>
          <%= link_to 'Remove', cart_item_path(item), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p>Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></p>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
