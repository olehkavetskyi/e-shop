<h1 class="form-title">Feedback Form</h1>

<%= form_with url: feedbacks_path, method: :post, local: true, html: { class: "feedback-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Your Name", class: "form-label" %>
    <%= f.text_field :name, name: 'feedback[name]', required: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Your Email", class: "form-label" %>
    <%= f.email_field :email, name: 'feedback[email]', required: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :message, "Your Message", class: "form-label" %>
    <%= f.text_area :message, rows: 5, name: 'feedback[message]', required: true, class: "form-textarea" %>
  </div>

  <div class="form-group">
    <%= f.submit "Send Feedback", class: "form-submit" %>
  </div>
<% end %>
