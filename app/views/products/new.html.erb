<h1 class="new-product__title text-center">Add New Product</h1>

<div class="new-product container">
  <%= form_with(model: @product, local: true, class: "new-product__form") do |form| %>
    <% if @product.errors.any? %>
      <div class="new-product__errors alert alert-danger">
        <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Image Preview -->
    <div class="new-product__image-preview">
      <img id="imagePreview" src="#" alt="Image Preview" style="display: none; max-width: 100%; height: auto;" />
    </div>

    <div class="new-product__field">
      <%= form.label :name, class: "new-product__label" %>
      <%= form.text_field :name, class: "new-product__input" %>
    </div>

    <div class="new-product__field">
      <%= form.label :image, class: "new-product__label" %>
      <%= form.file_field :image, class: "new-product__input", onchange: "previewImage(event)" %>
    </div>

    <div class="new-product__field">
      <%= form.label :description, class: "new-product__label" %>
      <%= form.text_area :description, class: "new-product__input new-product__input--textarea" %>
    </div>

    <div class="new-product__field">
      <%= form.label :price, class: "new-product__label" %>
      <%= form.number_field :price, step: 0.01, class: "new-product__input" %>
    </div>

    <div class="new-product__field">
      <%= form.label :stock, class: "new-product__label" %>
      <%= form.number_field :stock, class: "new-product__input" %>
    </div>

    <div class="new-product__field">
      <%= form.label :category_id, class: "new-product__label" %>
      <%= form.text_field :category_name, id: "category_name", class: "new-product__input", placeholder: "Start typing category name..." %>
      <ul id="category_suggestions" class="suggestions-list"></ul>
    </div>

    <div class="new-product__actions">
      <%= form.submit "Create Product", class: "new-product__submit" %>
      <%= link_to 'Back', products_path, class: "new-product__back-link" %>
    </div>
  <% end %>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const categoryInput = document.getElementById("category_name");
        const suggestionList = document.getElementById("category_suggestions");

        // Function to fetch and display category suggestions
        categoryInput.addEventListener("input", function() {
            const query = categoryInput.value;

            if (query.length >= 2) { // Start searching after 2 characters
                fetch(`/categories/search?query=${query}`)
                    .then(response => response.json())
                    .then(data => {
                        suggestionList.innerHTML = "";
                        data.categories.forEach(category => {
                            const listItem = document.createElement("li");
                            listItem.textContent = category.name;
                            listItem.setAttribute("data-category-id", category.id);
                            listItem.classList.add("suggestion-item");
                            suggestionList.appendChild(listItem);
                        });
                    });
            } else {
                suggestionList.innerHTML = ""; // Clear suggestions when input is cleared
            }
        });

        // Handle selection from suggestions
        suggestionList.addEventListener("click", function(event) {
            if (event.target && event.target.classList.contains("suggestion-item")) {
                categoryInput.value = event.target.textContent;
                // Optionally, store the category_id in a hidden field or pass it directly in form submission
                document.getElementById("product_category_id").value = event.target.getAttribute("data-category-id");
                suggestionList.innerHTML = ""; // Clear suggestions
            }
        });
    });
</script>
