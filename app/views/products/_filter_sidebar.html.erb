<!-- app/views/products/_filter_sidebar.html.erb -->
<div class="filter-sidebar">
  <h3>Sort by</h3>
  <form method="get" action="<%= products_path %>">
    <div class="form-group">
      <label>Min Price:</label>
      <input type="number" name="min_price" class="form-control" value="<%= params[:min_price] %>">
    </div>
    <div class="form-group">
      <label>Max Price:</label>
      <input type="number" name="max_price" class="form-control" value="<%= params[:max_price] %>">
    </div>
    <div class="form-group">
      <label>Brand:</label>
      <select name="brand" class="form-control">
        <option value="">All Brands</option>
        <% @brands.each do |brand| %>
          <option value="<%= brand %>" <%= 'selected' if params[:brand] == brand %>><%= brand %></option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
  </form>
</div>
